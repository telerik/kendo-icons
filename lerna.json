{
  "version": "4.8.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "run": {
      "concurrency": 1,
      "loglevel": "silly"
    },
    "clean": {
      "yes": true
    },
    "version": {
      "loglevel": "silly",
      "allowBranch": [
        "master",
        "develop"
      ],
      "conventionalCommits": true
    },
    "publish": {
      "concurrency": 1,
      "loglevel": "silly",
      "message": "chore(release): %s",
      "verifyAccess": false,
      "yes": true
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}